@model IEnumerable<AgroTrade.Models.Crop>

<h2>Crops</h2>

<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Crop Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Created At</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var crop in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(crop.ImagePath))
                    {
                        <img src="@crop.ImagePath" alt="Crop Image" style="width: 100px; height: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@crop.CropName</td>
                <td>@crop.Quantity</td>
                <td>@crop.Price</td>
                <td>@crop.CreatedAt</td>
                <td>@crop.UserId</td>
                <td>
                    @{
                        if (Context.Request.Cookies.TryGetValue("UserId", out var userIdString) &&
                        int.TryParse(userIdString, out var userId))
                        {
                            if (crop.UserId == userId)
                            {
                                <a asp-action="Edit" asp-route-id="@crop.CropId">Edit</a>                                        
                                <a asp-action = "Delete" asp-route-id = "@crop.CropId"> Delete </a>
                            }
                            else
                            {
                                <a asp-controller="Transaction" asp-action="Buy" asp-route-cropId="@crop.CropId">Buy</a>
                            }
                            
                        }
                        else
                        {
                            <span>Buy</span>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
