@model AgroTrade.Models.Crop
@{
    ViewData["Title"] = "Delete Crop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AgroTrade</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-green-50">
    <div class="container mx-auto py-8">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-red-600">
                <h2 class="text-2xl font-bold text-white">Delete Crop</h2>
            </div>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">Are you sure you want to delete this crop?</h3>
                <div class="bg-gray-100 rounded-lg p-4 mb-4">
                    <h4 class="text-lg font-semibold text-gray-800 mb-2">@Model.CropName</h4>
                    <p class="text-gray-600"><span class="font-semibold">Quantity:</span> @Model.Quantity</p>
                    <p class="text-gray-600"><span class="font-semibold">Price:</span> $@Model.Price.ToString("F2")</p>
                    <p class="text-gray-600"><span class="font-semibold">Created At:</span> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                    <p class="text-gray-600"><span class="font-semibold">User ID:</span> @Model.UserId</p>
                    <p class="text-gray-600"><span class="font-semibold">Crop ID:</span> @Model.CropId</p>
                </div>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="CropId" />
                    <div class="flex items-center justify-between">
                        <input type="submit" value="Delete" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" />
                        <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-green-500 hover:text-green-800">
                            Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>