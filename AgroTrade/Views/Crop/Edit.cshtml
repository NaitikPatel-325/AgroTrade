@model AgroTrade.Models.Crop

<h2>Edit Crop</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="CropId" />
    <div>
        <label asp-for="CropName"></label>
        <input asp-for="CropName" />
        <span asp-validation-for="CropName"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" />
        <span asp-validation-for="Quantity"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <!-- Display existing image if available -->
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div>
            <img src="@Model.ImagePath" alt="Crop Image" style="width: 150px; height: 150px;" />
        </div>
    }

    <!-- Input for updating the image -->
    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" />
        <span asp-validation-for="Image"></span>
    </div>

    <input type="submit" value="Save" />
</form>

